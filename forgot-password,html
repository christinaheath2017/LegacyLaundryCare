<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Forgot Password – Legacy LaundryCare</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js"></script>
  <link rel="stylesheet" href="styles.css" />
</head>
<body>
  <div class="card">
    <h1>🔐 Reset Your Password</h1>
    <p style="text-align:center;">Enter your email and we’ll send a secure reset link.</p>

    <form id="resetForm" class="form-section">
      <label>Email Address:</label>
      <input type="email" name="email" required />
      <button type="submit">Send Reset Link</button>
      <div class="message" id="resetMessage"></div>
    </form>
  </div>

  <script>
    const supabase = supabase.createClient(
      'https://ztcyemsqljopyjbzpqvq.supabase.co',
      'public-anon-key'
    );

    document.getElementById("resetForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      const email = new FormData(e.target).get("email");
      const message = document.getElementById("resetMessage");

      const { error } = await supabase.auth.resetPasswordForEmail(email, {
        redirectTo: "https://christinaheath2017.github.io/LegacyLaundryCare/update-password.html"
      });

      if (error) {
        message.textContent = "Error sending reset link.";
        message.style.color = "red";
      } else {
        message.textContent = "Reset link sent! Check your inbox.";
        message.style.color = "green";
      }
    });
  </script>
</body>
</html>
