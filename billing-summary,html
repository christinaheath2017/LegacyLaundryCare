  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const orderID = generateOrderID();
      const tier = localStorage.getItem("serviceTier") || "Standard";
      const weight = parseFloat(localStorage.getItem("estimatedWeight")) || 0;
      const baseRate = 2.00;
      const addons = JSON.parse(localStorage.getItem("selectedAddons") || "[]");
      const products = JSON.parse(localStorage.getItem("productPreferences") || "[]");
      const stains = parseInt(localStorage.getItem("stainItems")) || 0;
      const tip = parseFloat(localStorage.getItem("tipAmount")) || 0;
      const paymentStatus = localStorage.getItem("paymentStatus") || "pending";
      const paymentTime = localStorage.getItem("paymentTime") || "[Pending]";

      const addonCost = addons.length * 5;
      const productCost = products.length * 2;
      const stainCost = stains * 1.5;
      const subtotal = (weight * baseRate) + addonCost + productCost + stainCost;
      const grandTotal = subtotal + tip;

      document.getElementById("orderID").textContent = orderID;
      document.getElementById("serviceTier").textContent = tier;
      document.getElementById("estimatedWeight").textContent = weight;
      document.getElementById("baseRate").textContent = baseRate.toFixed(2);
      document.getElementById("stainItems").textContent = stains;
      document.getElementById("subtotal").textContent = subtotal.toFixed(2);
      document.getElementById("tipAmount").textContent = tip.toFixed(2);
      document.getElementById("grandTotal").textContent = grandTotal.toFixed(2);
      document.getElementById("paymentTime").textContent = paymentTime;

      const badge = document.getElementById("paymentStatusBadge");
      badge.textContent = paymentStatus.charAt(0).toUpperCase() + paymentStatus.slice(1);
      badge.className = "badge " + (paymentStatus === "paid" ? "paid" : paymentStatus === "failed" ? "failed" : "pending");

      if (paymentStatus === "failed") {
        document.getElementById("updatePaymentBtn").style.display = "inline-block";
      }

      const addonsList = document.getElementById("addonsList");
      addons.forEach(addon => {
        const li = document.createElement("li");
        li.textContent = addon;
        addonsList.appendChild(li);
      });

      const productList = document.getElementById("productList");
      products.forEach(prod => {
        const li = document.createElement("li");
        li.textContent = prod;
        productList.appendChild(li);
      });

      // Sync to tax-withholding.html
      localStorage.setItem("orderID", orderID);
      localStorage.setItem("tipsReceived", tip.toFixed(2));
      localStorage.setItem("nonTaxableTips", "0.00"); // Update if you track exempt tips
      localStorage.setItem("clientWeight", weight.toFixed(2));
      localStorage.setItem("grandTotal", grandTotal.toFixed(2));
    });

    function generateOrderID() {
      const initials = (localStorage.getItem("clientName") || "XX")
        .split(" ")
        .map(n => n[0]?.toUpperCase())
        .join("")
        .slice(0, 2);
      const today = new Date();
      const dateCode = `${today.getMonth()+1}${today.getDate()}${String(today.getFullYear()).slice(-2)}`;
      return `ORD-${initials}-${dateCode}`;
    }
  </script>
